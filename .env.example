# LLM API 配置（兼容 OpenAI 接口的服务均可）
API_KEY=sk-your-api-key-here
API_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
MODEL_NAME=qwen3.5-plus

# ── 轻量 LLM（路由/摘要/搜索等辅助任务，不填则复用主模型） ──
LITE_MODEL_NAME=
LITE_API_KEY=
LITE_API_BASE_URL=

# ── 短期记忆（Checkpointer） ──
CHECKPOINT_BACKEND=sqlite                    # memory / sqlite / postgres
CHECKPOINT_SQLITE_PATH=checkpoints.db        # sqlite 模式的文件路径
# CHECKPOINT_POSTGRES_URL=postgresql://...   # postgres 模式的连接串

# ── 长期记忆（Store） ──
STORE_BACKEND=memory                         # memory / postgres
# STORE_POSTGRES_URL=                        # 不填则复用 CHECKPOINT_POSTGRES_URL

# ── Embedding（语义搜索） ──
EMBEDDING_MODEL=text-embedding-v3            # 不配则 store 无语义搜索
EMBEDDING_API_KEY=                           # 不填则复用 API_KEY
EMBEDDING_BASE_URL=                          # 不填则复用 API_BASE_URL

# ── 搜索 Provider: 博查 (Bocha) ──
BOCHA_API_KEY=